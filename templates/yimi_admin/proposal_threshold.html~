<script>
$(function() {

    $("input").blur(function() {
        if ($(this).val() == '') {
            $(this).next().addClass('visible');
        } else {
            $(this).next().removeClass('visible');
        }
    });

    $('.submit').click(function() {
        var a = 0;
        $('.sh_nes').each(function() {
            if ($(this).val() == '') {
                a = 1;
            }
        });
        if(a == 1){
       	alert('请完整填写表单');
        return false;
        }
    });
});
</script>

